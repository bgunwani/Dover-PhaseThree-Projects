@model coreSessionManagementApplication.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="card">
    <div class="card-header">Product Details</div>
    <div class="card-body">
       <div class="row">
           <div class="col-md-4">
               <img src="@Model.Image" height="300" width="300" />
           </div>
           <div class="col-md-8">
               <table class="table">
                   <tbody>
                       <tr>
                           <th>Product Id</th>
                           <td>@Model.Id</td>
                       </tr>
                       <tr>
                           <th>Product Name</th>
                           <td>@Model.Name</td>
                       </tr>
                       <tr>
                           <th>Product Price</th>
                           <td>@Model.Price</td>
                       </tr>
                       <tr>
                           <td colspan="2">
                               <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary m-1">Edit</a>
                               <a asp-action="Index" class="btn btn-secondary m-1">Back to List</a>                               
                               <a asp-action="" class="btn btn-secondary m-1">Add to Cart</a>
                           </td>
                       </tr>
                   </tbody>
               </table>
           </div>
       </div>
    </div>
</div>


