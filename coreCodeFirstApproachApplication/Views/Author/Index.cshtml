@model IList<coreCodeFirstApproachApplication.Models.Author>
@{
    ViewData["Title"] = "Index";
}

<h1>Authors List</h1><br/>

<a class="btn btn-secondary" asp-controller="Author" asp-action="Create">Add New Author</a><br/><br/>

<table class="table">
    <thead>
        <tr>
            <th>Author Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Author Added Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.AuthorId</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.AuthorAddedDate</td>
                <td>
                    <a asp-controller="Author" asp-action="Details" asp-route-id="@item.AuthorId">Details</a> |
                    <a asp-controller="Author" asp-action="Delete" asp-route-id="@item.AuthorId">Delete</a> |
                    <a asp-controller="Author" asp-action="Edit" asp-route-id="@item.AuthorId">Update</a>
                </td>
            </tr>
        }
    </tbody>
</table>

